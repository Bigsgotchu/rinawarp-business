{
  "main": "out/main/main.js",
  "name": "rinawarp-terminal-pro",
  "version": "1.0.2",
  "type": "commonjs",
  "scripts": {
    "verify:project": "node scripts/phase1-analyze.js",
    "backend:health": "node scripts/phase4-backend-health.js",
    "quick-health-check": "node scripts/quick-health-check.js",
    "build:apps": "npm run build",
    "deploy:staging": "echo 'Staging deploy placeholder'",
    "deploy:production": "echo 'Production deploy placeholder'",
    "test:smoke": "node production-smoke-test.cjs",
    "test:smoke:runtime": "electron . --smoke-runtime",
    "verify:prod": "node scripts/verify-prod.js",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"worker/src/**/*.ts\"",
    "cleanup:dry": "node legacy/tools/cleanup-repo.mjs --dry-run",
    "cleanup:apply": "node legacy/tools/cleanup-repo.mjs --apply",
    "cleanup:apply:yes": "node legacy/tools/cleanup-repo.mjs --apply --yes",
    "clean:dist": "rm -rf dist dist-electron dist-terminal-pro build-output squashfs-root release",
    "compile": "tsc -p tsconfig.app.json",
    "compile:worker": "tsc -p tsconfig.worker.json",
    "build:renderer": "vite build",
    "build": "npm run build:renderer && npm run compile",
    "dist:linux:staged": "npm run clean:dist && npm run build && bash scripts/build-staging.sh && electron-builder --config electron-builder-config.js --linux AppImage --publish=never",
    "ci:verify:appimage": "bash scripts/ci-verify-appimage.sh",
    "ci:check:size": "bash scripts/check-size.sh",
    "ci:smoke:pty": "node scripts/smoke-pty.mjs",
    "install:local:linux": "bash scripts/install-local-linux.sh",
    "uninstall:local:linux": "bash scripts/uninstall-local-linux.sh",
    "smoke:test:offline": "npm run dist:linux:staged && ./dist-terminal-pro/*.AppImage --smoke-test --smoke-ipc --smoke-rina-roundtrip --smoke-offline --smoke-timeout-ms 60000 --smoke-no-sandbox",
    "smoke:test:online": "npm run dist:linux:staged && ./dist-terminal-pro/*.AppImage --smoke-test --smoke-ipc --smoke-rina-roundtrip --smoke-timeout-ms 60000 --smoke-no-sandbox",
    "smoke:test:pty": "npm run dist:linux:staged && ./dist-terminal-pro/*.AppImage --smoke-test --smoke-terminal-pty --smoke-timeout-ms 30000 --smoke-no-sandbox",
    "format": "prettier . --write && markdownlint \"**/*.md\" --fix || true",
    "format:check": "prettier . --check && markdownlint \"**/*.md\"",
    "audit": "node tools/repo-audit.mjs --report",
    "audit:fix": "node tools/repo-audit.mjs --report --fix-format",
    "audit:quarantine": "node tools/repo-audit.mjs --report --fix-format --quarantine-conflicts",
    "audit:danger": "node tools/repo-audit.mjs --report --fix-format --quarantine-conflicts --delete-exact-dups"
  },
  "dependencies": {
    "@types/node": "^25.0.3",
    "@types/xterm": "^2.0.3",
    "chalk": "^5.6.2",
    "electron-store": "^11.0.2",
    "node-machine-id": "^1.1.12",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stripe": "^20.0.0",
    "xterm": "^5.3.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251209.0",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.57.0",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "markdownlint-cli": "^0.41.0",
    "node-pty": "^1.1.0",
    "prettier": "^3.0.0",
    "typescript-eslint": "^8.50.1",
    "vite": "^5.4.11",
    "electron": "^39.2.7",
    "vitest": "^4.0.15"
  }
}