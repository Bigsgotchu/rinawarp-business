{
  "securityAudit": {
    "version": "1.0.0",
    "description": "Security audit configuration for RinaWarp Terminal Pro",
    "checks": {
      "codeSigning": {
        "enabled": true,
        "requiredForProduction": true,
        "windows": {
          "enabled": true,
          "certificatePath": "./certs/windows.p12",
          "timestampServer": "http://timestamp.digicert.com",
          "algorithm": "sha256"
        },
        "macos": {
          "enabled": true,
          "identity": "Developer ID Application: RinaWarp Technologies",
          "entitlements": "./entitlements.plist",
          "hardenedRuntime": true
        },
        "linux": {
          "enabled": true,
          "gpgKey": "./certs/linux.gpg",
          "signingKeyId": "rinawarp@example.com"
        }
      },
      "vulnerabilityScanning": {
        "enabled": true,
        "tools": ["npm-audit", "snyk", "safety"],
        "dependencies": {
          "checkForVulnerabilities": true,
          "autoFix": false,
          "severityThreshold": "moderate"
        },
        "codeAnalysis": {
          "eslintSecurity": true,
          "bandit": true,
          "semgrep": true
        }
      },
      "securityHeaders": {
        "contentSecurityPolicy": {
          "enabled": true,
          "policy": "default-src 'self'; script-src 'self' 'unsafe-inline' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' https://api.openai.com https://api.anthropic.com https://api-inference.huggingface.co"
        },
        "permissions": {
          "enabled": true,
          "camera": false,
          "microphone": false,
          "location": false,
          "notifications": true
        }
      },
      "secureConfiguration": {
        "nodeIntegration": false,
        "contextIsolation": true,
        "enableRemoteModule": false,
        "sandbox": true,
        "webSecurity": true,
        "allowRunningInsecureContent": false,
        "experimentalFeatures": false
      }
    },
    "compliance": {
      "standards": ["OWASP", "NIST", "ISO27001"],
      "requirements": {
        "dataEncryption": true,
        "secureCommunication": true,
        "inputValidation": true,
        "outputEncoding": true,
        "authenticationRequired": true,
        "sessionManagement": true,
        "errorHandling": true,
        "logging": true
      }
    },
    "threats": {
      "mitigation": {
        "xss": {
          "enabled": true,
          "techniques": ["content-security-policy", "input-validation", "output-encoding"]
        },
        "csrf": {
          "enabled": true,
          "techniques": ["token-validation", "same-site-cookies"]
        },
        "injection": {
          "enabled": true,
          "techniques": ["parameterized-queries", "input-sanitization"]
        },
        "insecureStorage": {
          "enabled": true,
          "techniques": ["encryption-at-rest", "secure-key-management"]
        },
        "denialOfService": {
          "enabled": true,
          "techniques": ["rate-limiting", "resource-monitoring"]
        }
      }
    }
  },
  "codeSigning": {
    "windows": {
      "certificateType": "EV",
      "provider": "Sectigo",
      "validityPeriod": "3 years",
      "cryptography": {
        "algorithm": "RSA",
        "keySize": 4096,
        "hashAlgorithm": "SHA256"
      },
      "timestamping": {
        "enabled": true,
        "server": "http://timestamp.digicert.com",
        "algorithm": "SHA256"
      },
      "smartScreen": {
        "enabled": true,
        "reputationRequired": true
      }
    },
    "macos": {
      "developerAccount": {
        "type": "Apple Developer Program",
        "teamId": "YOUR_TEAM_ID",
        "certificateType": "Developer ID Application"
      },
      "notarization": {
        "enabled": true,
        "appleId": "your-apple-id@example.com",
        "appSpecificPassword": "app-specific-password",
        "ascProvider": "YOUR_TEAM_ID"
      },
      "entitlements": {
        "hardenedRuntime": true,
        "com.apple.security.cs.allow-jit": true,
        "com.apple.security.cs.allow-unsigned-executable-memory": true,
        "com.apple.security.network.client": true,
        "com.apple.security.files.user-selected.read-only": true
      }
    },
    "linux": {
      "signingMethod": "GPG",
      "keyType": "RSA",
      "keySize": 4096,
      "hashAlgorithm": "SHA256",
      "detachedSignature": true,
      "clearsignSignature": false,
      "armor": true,
      "compress": true
    }
  },
  "securityTesting": {
    "staticAnalysis": {
      "enabled": true,
      "tools": {
        "eslint": {
          "security": true,
          "plugins": ["security"]
        },
        "semgrep": {
          "enabled": true,
          "rules": ["owasp-top-ten", "electron-security"]
        },
        "bandit": {
          "enabled": true,
          "excludeDirs": ["node_modules", "build"]
        }
      }
    },
    "dynamicAnalysis": {
      "enabled": true,
      "tools": {
        "zap": {
          "enabled": true,
          "passiveScan": true,
          "activeScan": false
        },
        "nuclei": {
          "enabled": true,
          "templates": ["security"]
        }
      }
    },
    "dependencyScanning": {
      "enabled": true,
      "tools": {
        "npmAudit": {
          "enabled": true,
          "auditLevel": "moderate"
        },
        "snyk": {
          "enabled": true,
          "testDeputations": true
        },
        "safety": {
          "enabled": true
        }
      }
    }
  },
  "incidentResponse": {
    "enabled": true,
    "contact": {
      "securityEmail": "security@rinawarptech.com",
      "emergencyContact": "+1-555-SECURITY"
    },
    "procedure": {
      "detection": "automated",
      "response": "immediate",
      "communication": "email",
      "documentation": "required"
    },
    "escalation": {
      "critical": "immediate",
      "high": "1 hour",
      "medium": "4 hours",
      "low": "24 hours"
    }
  }
}
