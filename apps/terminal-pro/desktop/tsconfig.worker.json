{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "lib": [
            "ES2022",
            "WebWorker"
        ],
        "types": [
            "@cloudflare/workers-types"
        ],
        "noEmitOnError": true
    },
    "include": [
        "worker/src/**/*.ts"
    ],
    "exclude": [
        "legacy/**",
        "out/**",
        "dist/**"
    ]
}