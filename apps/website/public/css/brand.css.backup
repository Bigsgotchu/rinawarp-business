:root {
  /* Base */
  --font-sans: system-ui, -apple-system, BlinkMacSystemFont, 'SF Pro Text', 'Inter', sans-serif;
  --radius-lg: 18px;
  --radius-xl: 26px;
  --shadow-soft: 0 18px 45px rgba(15, 23, 42, 0.55);

  /* Mermaid (Terminal Pro) */
  --mermaid-bg: #020617;
  --mermaid-bg-soft: #020617;
  --mermaid-card: rgba(15, 23, 42, 0.98);
  --mermaid-border: rgba(148, 163, 184, 0.25);
  --mermaid-pink: #ec4899;
  --mermaid-coral: #fb7185;
  --mermaid-teal: #14b8a6;
  --mermaid-blue: #38bdf8;
  --mermaid-text-main: #e5e7eb;
  --mermaid-text-muted: #9ca3af;

  /* Unicorn (AI-MVC) */
  --unicorn-bg: radial-gradient(circle at top left, #1a1035, #020617 55%, #020617 100%);
  --unicorn-card: rgba(15, 23, 42, 0.98);
  --unicorn-border: rgba(168, 85, 247, 0.5);
  --unicorn-pink: #f472b6;
  --unicorn-violet: #a855f7;
  --unicorn-cyan: #22d3ee;
  --unicorn-blue: #38bdf8;
  --unicorn-text-main: #e5e7eb;
  --unicorn-text-muted: #9ca3af;
}

/* Global layout */
body {
  margin: 0;
  font-family: var(--font-sans);
  background: #020617;
  color: #e5e7eb;
}

a {
  color: inherit;
  text-decoration: none;
}

a:hover {
  text-decoration: underline;
}

.main-shell {
  min-height: 100vh;
  display: flex;
  flex-direction: column;
}

/* Top nav */
.nav {
  padding: 16px 24px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: sticky;
  inset-block-start: 0;
  z-index: 40;
  backdrop-filter: blur(20px);
  background: linear-gradient(
    to bottom,
    rgba(15, 23, 42, 0.95),
    rgba(15, 23, 42, 0.85),
    transparent
  );
  border-inset-block-end: 1px solid rgba(148, 163, 184, 0.3);
}

.nav-left {
  display: flex;
  align-items: center;
  gap: 10px;
}

.nav-logo {
  width: 32px;
  height: 32px;
  border-radius: 12px;
  overflow: hidden;
  background: radial-gradient(circle at 10% 0%, #ec4899, #14b8a6);
}

.nav-logo img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.nav-title {
  font-weight: 600;
  letter-spacing: 0.04em;
  font-size: 15px;
}

.nav-title span {
  opacity: 0.65;
  font-weight: 400;
  margin-inset-inline-start: 6px;
  font-size: 13px;
}

.nav-links {
  display: flex;
  gap: 18px;
  align-items: center;
  font-size: 14px;
  color: #9ca3af;
}

.nav-links a {
  padding: 6px 10px;
  border-radius: 999px;
  border: 1px solid transparent;
}

.nav-links a:hover {
  border-color: rgba(148, 163, 184, 0.35);
  color: #e5e7eb;
}

/* CTA button */
.nav-cta,
.btn-primary {
  border-radius: 999px;
  padding: 8px 16px;
  border: none;
  font-size: 14px;
  font-weight: 500;
  cursor: pointer;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: linear-gradient(135deg, #ec4899, #fb7185);
  color: white;
  box-shadow: 0 14px 30px rgba(236, 72, 153, 0.45);
}

.nav-cta span.icon,
.btn-primary span.icon {
  font-size: 16px;
}

.nav-cta:hover,
.btn-primary:hover {
  filter: brightness(1.08);
}

/* Secondary buttons */
.btn-outline {
  border-radius: 999px;
  padding: 8px 16px;
  border: 1px solid rgba(148, 163, 184, 0.4);
  background: transparent;
  color: #e5e7eb;
  font-size: 14px;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  cursor: pointer;
}

.btn-outline:hover {
  background: rgba(15, 23, 42, 0.9);
}

/* Hero layout */
.hero {
  padding: 40px 24px 32px;
  max-width: 1120px;
  width: 100%;
  margin: 0 auto;
  display: grid;
  grid-template-columns: minmax(0, 1.4fr) minmax(0, 1.1fr);
  gap: 32px;
}

.hero-left-eyebrow {
  display: inline-flex;
  align-items: center;
  gap: 10px;
  padding: 4px 10px;
  border-radius: 999px;
  background: rgba(15, 23, 42, 0.9);
  border: 1px solid rgba(148, 163, 184, 0.45);
  font-size: 11px;
  color: #9ca3af;
  margin-inset-block-end: 12px;
}

.hero-badge-pill {
  padding: 3px 8px;
  border-radius: 999px;
  background: rgba(34, 197, 94, 0.12);
  color: #bbf7d0;
  font-size: 10px;
  border: 1px solid rgba(34, 197, 94, 0.3);
}

.hero-title {
  font-size: clamp(32px, 4vw, 44px);
  line-height: 1.1;
  letter-spacing: -0.04em;
  margin-inset-block-end: 14px;
}

.hero-title span.highlight {
  background: linear-gradient(135deg, #ec4899, #22d3ee);
  -webkit-background-clip: text;
  color: transparent;
}

.hero-subtitle {
  font-size: 15px;
  color: #9ca3af;
  max-width: 480px;
}

.hero-ctas {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  margin-inset-block-start: 22px;
}

.hero-footnote {
  margin-inset-block-start: 10px;
  font-size: 11px;
  color: #6b7280;
}

/* Cards */
.card-row {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
  gap: 16px;
  margin-inset-block-start: 26px;
}

.card {
  border-radius: var(--radius-lg);
  border: 1px solid rgba(148, 163, 184, 0.22);
  background: radial-gradient(circle at top left, rgba(148, 163, 184, 0.2), rgba(15, 23, 42, 0.95));
  padding: 14px 14px 16px;
  box-shadow: var(--shadow-soft);
}

.card-title {
  font-size: 13px;
  font-weight: 600;
  margin-inset-block-end: 8px;
}

.card-body {
  font-size: 12px;
  color: #9ca3af;
}

.card-pill-row {
  display: flex;
  flex-wrap: wrap;
  gap: 6px;
  margin-inset-block-start: 10px;
}

.card-pill {
  font-size: 11px;
  padding: 4px 8px;
  border-radius: 999px;
  border: 1px solid rgba(148, 163, 184, 0.4);
  background: rgba(15, 23, 42, 0.85);
}

/* Product feature grid */
.section {
  padding: 20px 24px 40px;
  max-width: 1120px;
  margin: 0 auto;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: baseline;
  gap: 12px;
  margin-inset-block-end: 20px;
}

.section-title {
  font-size: 17px;
  font-weight: 600;
}

.section-subtitle {
  font-size: 13px;
  color: #9ca3af;
}

.feature-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(230px, 1fr));
  gap: 16px;
}

.feature-item {
  border-radius: var(--radius-lg);
  border: 1px solid rgba(148, 163, 184, 0.25);
  padding: 14px 14px 16px;
  background: radial-gradient(circle at top left, rgba(30, 64, 175, 0.45), rgba(15, 23, 42, 0.96));
}

.feature-item h3 {
  margin: 0 0 6px;
  font-size: 13px;
}

.feature-item p {
  margin: 0;
  font-size: 12px;
  color: #9ca3af;
}

/* Pricing snippet */
.pricing-row {
  display: grid;
  grid-template-columns: minmax(0, 1.1fr) minmax(0, 1fr);
  gap: 16px;
  align-items: stretch;
}

.pricing-card {
  border-radius: var(--radius-xl);
  border: 1px solid rgba(148, 163, 184, 0.3);
  background: radial-gradient(circle at 0 0, rgba(236, 72, 153, 0.25), rgba(15, 23, 42, 0.98));
  padding: 18px 18px 20px;
  box-shadow: var(--shadow-soft);
}

.pricing-price {
  font-size: 26px;
  font-weight: 700;
  margin-inset-block-end: 4px;
}

.pricing-price span {
  font-size: 13px;
  font-weight: 400;
  color: #9ca3af;
}

.pricing-line {
  font-size: 12px;
  color: #9ca3af;
}

.pricing-list {
  margin: 10px 0 14px;
  padding-inset-inline-start: 18px;
  font-size: 12px;
  color: #9ca3af;
}

.badge-pill {
  display: inline-flex;
  align-items: center;
  gap: 6px;
  font-size: 11px;
  padding: 4px 10px;
  border-radius: 999px;
  border: 1px solid rgba(52, 211, 153, 0.6);
  color: #a7f3d0;
  background: rgba(6, 78, 59, 0.6);
}

/* Footer */
.footer {
  border-inset-block-start: 1px solid rgba(31, 41, 55, 0.95);
  padding: 16px 24px 20px;
  font-size: 11px;
  color: #6b7280;
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  justify-content: space-between;
  background: radial-gradient(circle at top, rgba(30, 64, 175, 0.35), #020617 50%);
}

.footer-links {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
}

.footer-links a {
  color: #9ca3af;
}

.footer-links a:hover {
  color: #e5e7eb;
}

/* Terminal page theme override */
.page-terminal {
  background: radial-gradient(circle at top left, #0f172a, #020617 60%);
}

/* AI-MVC page theme override */
.page-aimvc {
  background: var(--unicorn-bg);
}

/* AI-MVC highlight components */
.aimvc-hero-shell {
  border-radius: 30px;
  border: 1px solid rgba(168, 85, 247, 0.7);
  padding: 18px 18px 20px;
  background:
    radial-gradient(circle at top left, rgba(244, 114, 182, 0.16), transparent 55%),
    radial-gradient(circle at top right, rgba(56, 189, 248, 0.18), transparent 60%),
    rgba(15, 23, 42, 0.98);
  box-shadow: 0 32px 80px rgba(15, 23, 42, 0.9);
}

.glow-pill {
  font-size: 11px;
  padding: 4px 9px;
  border-radius: 999px;
  border: 1px solid rgba(244, 114, 182, 0.7);
  background: rgba(30, 64, 175, 0.8);
  color: #f9a8d4;
}

/* Responsive */
@media (max-width: 880px) {
  .hero {
    grid-template-columns: minmax(0, 1fr);
    padding-inset-block-start: 24px;
  }

  .section-header {
    flex-direction: column;
    align-items: flex-start;
  }

  .pricing-row {
    grid-template-columns: minmax(0, 1fr);
  }

  .nav-links {
    display: none;
  }
}
