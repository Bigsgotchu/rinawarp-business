/* ---------- ROOT COLOR SYSTEM ---------- */
:root {
  --pink: #ff1ead;
  --teal: #2af5d0;
  --coral: #ff6f61;
  --blue: #7ed6ff;
  --black: #0a0a0a;
  --gray: #181818;
  --light-gray: #ccc;
  --white: #ffffff;

  --gradient-main: linear-gradient(90deg, var(--pink), var(--teal));
  --gradient-accent: linear-gradient(90deg, var(--coral), var(--blue));
}

/* ---------- GLOBAL RESET ---------- */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', 'Roboto', 'Segoe UI', sans-serif;
  background-color: var(--black);
  color: var(--white);
  line-height: 1.7;
  -webkit-font-smoothing: antialiased;
  overflow-x: hidden;
}

/* ---------- LINKS ---------- */
a {
  color: var(--teal);
  text-decoration: none;
  transition: 0.3s ease;
}
a:hover {
  color: var(--pink);
}

/* ---------- HEADER / NAV ---------- */
header {
  width: 100%;
  padding: 1.5rem 2rem;
  background: var(--gradient-main);
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-weight: 600;
  color: var(--black);
  position: sticky;
  inset-block-start: 0;
  z-index: 10;
}

header h1,
header div {
  font-size: 1.5rem;
  letter-spacing: 0.5px;
}

nav a {
  color: var(--black);
  margin: 0 1rem;
  font-weight: 500;
  transition: 0.3s ease;
}

nav a:hover {
  color: var(--white);
}

/* ---------- HERO SECTION ---------- */
.hero {
  text-align: center;
  padding: 5rem 2rem;
  background: radial-gradient(circle at top, #111 0%, #000 80%);
}

.hero h1 {
  font-size: 3.2rem;
  font-weight: 800;
  background: var(--gradient-accent);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-inset-block-end: 1rem;
}

.hero p {
  max-width: 700px;
  margin: 0 auto;
  color: var(--light-gray);
  font-size: 1.1rem;
}

.cta-buttons {
  margin-inset-block-start: 2rem;
}

.btn {
  padding: 0.9rem 2rem;
  border-radius: 30px;
  border: none;
  font-size: 1rem;
  font-weight: 600;
  cursor: pointer;
  margin: 0.5rem;
  transition:
    transform 0.2s,
    box-shadow 0.3s;
}

.btn-primary {
  background: var(--gradient-main);
  color: var(--black);
}
.btn-secondary {
  background: var(--coral);
  color: var(--white);
}

.btn:hover {
  transform: translateY(-3px);
  box-shadow: 0 0 10px var(--teal);
}

/* ---------- FEATURE CARDS ---------- */
.features {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 2rem;
  padding: 4rem 2rem;
  background-color: var(--gray);
}

.feature {
  background: #111;
  border: 1px solid #1e1e1e;
  border-radius: 18px;
  padding: 2rem;
  transition: 0.3s ease;
}
.feature:hover {
  transform: translateY(-5px);
  border-color: var(--teal);
  box-shadow: 0 0 10px rgba(42, 245, 208, 0.4);
}

.feature h3 {
  color: var(--teal);
  margin-inset-block-end: 1rem;
}

.feature p {
  color: #bbb;
}

/* ---------- TESTIMONIALS ---------- */
.testimonial {
  text-align: center;
  max-width: 600px;
  margin: 3rem auto;
  background: #111;
  border-radius: 16px;
  padding: 2rem;
  border: 1px solid #1e1e1e;
}
.testimonial p {
  font-style: italic;
  color: #ccc;
}
.testimonial strong {
  display: block;
  margin-inset-block-start: 1rem;
  color: var(--teal);
}

/* ---------- FOOTER ---------- */
footer {
  background-color: #0d0d0d;
  text-align: center;
  padding: 3rem 2rem;
  color: #aaa;
  font-size: 0.9rem;
}

footer a {
  color: var(--teal);
  margin: 0 0.5rem;
}
footer a:hover {
  color: var(--pink);
}

/* ---------- LEGAL PAGES (Terms, Privacy, Refund, Contact) ---------- */
main {
  padding: 2rem;
  max-width: 900px;
  margin: 0 auto;
  background: #111;
  border-radius: 16px;
  border: 1px solid #1f1f1f;
}

main h1 {
  font-size: 2rem;
  text-align: center;
  background: var(--gradient-main);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  margin-inset-block-end: 2rem;
}

main h2 {
  color: var(--pink);
  margin-inset-block-start: 1.5rem;
  margin-inset-block-end: 0.5rem;
  font-size: 1.3rem;
}

main p,
main li {
  color: #ccc;
  margin-inset-block-end: 1rem;
}

ul {
  padding-inset-inline-start: 1.2rem;
}

strong {
  color: var(--blue);
}

/* ---------- RESPONSIVE ---------- */
@media (max-width: 768px) {
  header {
    flex-direction: column;
  }
  .hero h1 {
    font-size: 2.2rem;
  }
  .features {
    grid-template-columns: 1fr;
  }
}
