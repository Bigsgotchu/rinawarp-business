{
  "providers": {
    "openai": {
      "enabled": true,
      "apiKey": "OPENAI_API_KEY",
      "models": ["gpt-4", "gpt-4-turbo", "gpt-3.5-turbo"],
      "defaultModel": "gpt-4",
      "temperature": 0.7,
      "maxTokens": 1000
    },
    "anthropic": {
      "enabled": true,
      "apiKey": "ANTHROPIC_API_KEY",
      "models": ["claude-3-opus", "claude-3-sonnet", "claude-3-haiku"],
      "defaultModel": "claude-3-sonnet",
      "temperature": 0.7,
      "maxTokens": 1000
    },
    "ollama": {
      "enabled": true,
      "baseUrl": "OLLAMA_BASE_URL",
      "models": ["llama2", "codellama", "mistral", "vicuna"],
      "defaultModel": "llama2",
      "temperature": 0.7,
      "maxTokens": 1000
    }
  },
  "autoApproval": {
    "enabled": false,
    "allowedCommands": [
      "git status",
      "git log --oneline",
      "npm install",
      "npm run dev",
      "ls",
      "pwd"
    ],
    "blockedCommands": ["rm -rf", "sudo rm", "format", "del /f /q"],
    "maxExecutionTime": 30000,
    "requireConfirmation": true
  },
  "modes": {
    "architect": {
      "description": "Planning and designing system architecture",
      "enabled": true,
      "safetyLevel": "high"
    },
    "code": {
      "description": "Writing and modifying code",
      "enabled": true,
      "safetyLevel": "medium"
    },
    "ask": {
      "description": "Answering questions and providing information",
      "enabled": true,
      "safetyLevel": "low"
    },
    "debug": {
      "description": "Troubleshooting and debugging issues",
      "enabled": true,
      "safetyLevel": "medium"
    },
    "orchestrator": {
      "description": "Managing complex multi-step tasks",
      "enabled": true,
      "safetyLevel": "high"
    }
  },
  "taskGraph": {
    "maxConcurrentTasks": 5,
    "timeout": 60000,
    "retryAttempts": 3
  },
  "safety": {
    "enabled": true,
    "blockDangerousCommands": true,
    "restrictFileAccess": true,
    "allowedDirectories": ["/home", "/Users", "."],
    "logSafetyEvents": true
  }
}
