/* RinaWarp Terminal Pro - Marketing Website Styles */

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family:
    'Inter',
    -apple-system,
    BlinkMacSystemFont,
    'Segoe UI',
    Roboto,
    sans-serif;
  line-height: 1.6;
  color: #333;
}

.app {
  min-height: 100vh;
}

/* Navigation */
.nav {
  position: fixed;
  inset-block-start: 0;
  inset-inline-start: 0;
  inset-inline-end: 0;
  background: rgba(255, 255, 255, 0.95);
  backdrop-filter: blur(10px);
  border-inset-block-end: 1px solid rgba(255, 102, 204, 0.1);
  z-index: 1000;
  padding: 1rem 0;
}

.nav-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.nav-logo {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 700;
  font-size: 1.25rem;
  color: #ff6b9d;
}

.logo-icon {
  font-size: 1.5rem;
}

.nav-menu {
  display: flex;
  align-items: center;
  gap: 2rem;
}

.nav-link {
  text-decoration: none;
  color: #666;
  font-weight: 500;
  transition: color 0.3s ease;
}

.nav-link:hover {
  color: #ff66cc;
}

.nav-cta {
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
  color: white;
  border: none;
  padding: 0.75rem 1.5rem;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: transform 0.3s ease;
}

.nav-cta:hover {
  transform: translateY(-2px);
}

.nav-toggle {
  display: none;
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
}

/* Hero Section */
.hero {
  padding: 8rem 0 4rem;
  background: linear-gradient(
    135deg,
    #ff6b9d 0%,
    #ff8a80 25%,
    #4dd0e1 75%,
    #29b6f6 100%
  );
  background-image:
    radial-gradient(
      circle at 20% 50%,
      rgba(255, 107, 157, 0.4) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 80% 20%,
      rgba(255, 138, 128, 0.4) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 40% 80%,
      rgba(77, 208, 225, 0.4) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 60% 30%,
      rgba(41, 182, 246, 0.3) 0%,
      transparent 50%
    );
  color: white;
  min-height: 100vh;
  display: flex;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.hero-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: center;
}

.hero-title {
  font-size: 3.5rem;
  font-weight: 800;
  line-height: 1.1;
  margin-inset-block-end: 1.5rem;
  color: #1a202c;
}

.gradient-text {
  background: linear-gradient(135deg, #ff66cc, #ff8c42, #20b2aa, #87ceeb);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.hero-subtitle {
  font-size: 1.25rem;
  color: #666;
  margin-inset-block-end: 2rem;
  line-height: 1.6;
}

.hero-buttons {
  display: flex;
  gap: 1rem;
  margin-inset-block-end: 3rem;
}

.btn {
  padding: 1rem 2rem;
  border-radius: 12px;
  font-weight: 600;
  font-size: 1.1rem;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
  text-decoration: none;
  display: inline-block;
  text-align: center;
}

.btn-primary {
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
  color: white;
  box-shadow: 0 4px 15px rgba(255, 107, 157, 0.3);
}

.btn-primary:hover {
  transform: translateY(-3px);
  box-shadow: 0 8px 25px rgba(255, 107, 157, 0.4);
}

.btn-secondary {
  background: white;
  color: #4dd0e1;
  border: 2px solid #4dd0e1;
}

.btn-secondary:hover {
  background: #4dd0e1;
  color: white;
  transform: translateY(-2px);
}

.hero-stats {
  display: flex;
  gap: 2rem;
}

.stat {
  text-align: center;
}

.stat-number {
  display: block;
  font-size: 2rem;
  font-weight: 800;
  color: #ff66cc;
}

.stat-label {
  font-size: 0.9rem;
  color: #666;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

/* Terminal Preview */
.terminal-preview {
  background: #1a1a1a;
  border-radius: 12px;
  overflow: hidden;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  transform: perspective(1000px) rotateY(-5deg) rotateX(5deg);
}

.terminal-header {
  background: #2d2d2d;
  padding: 1rem;
  display: flex;
  align-items: center;
  gap: 1rem;
}

.terminal-buttons {
  display: flex;
  gap: 0.5rem;
}

.terminal-buttons span {
  width: 12px;
  height: 12px;
  border-radius: 50%;
}

.btn-close {
  background: #ff5f57;
}
.btn-minimize {
  background: #ffbd2e;
}
.btn-maximize {
  background: #28ca42;
}

.terminal-title {
  color: #fff;
  font-weight: 600;
}

.terminal-body {
  padding: 1.5rem;
  font-family: 'Monaco', 'Menlo', monospace;
  font-size: 0.9rem;
  line-height: 1.5;
}

.terminal-line {
  margin-inset-block-end: 0.5rem;
  display: flex;
  align-items: center;
  gap: 0.5rem;
}

.prompt {
  color: #20b2aa;
  font-weight: 600;
}

.command {
  color: #87ceeb;
}

.ai-response {
  margin-inset-inline-start: 1rem;
}

.ai-icon {
  color: #ff66cc;
  margin-inset-inline-end: 0.5rem;
}

.response {
  color: #68d391;
}

.cursor {
  color: #68d391;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%,
  50% {
    opacity: 1;
  }
  51%,
  100% {
    opacity: 0;
  }
}

/* Features Section */
.features {
  padding: 6rem 0;
  background: white;
}

.container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.section-title {
  text-align: center;
  font-size: 2.5rem;
  font-weight: 800;
  margin-inset-block-end: 1rem;
  color: #1a202c;
}

.section-subtitle {
  text-align: center;
  font-size: 1.25rem;
  color: #666;
  margin-inset-block-end: 3rem;
}

.features-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
}

.feature-card {
  text-align: center;
  padding: 2rem;
  border-radius: 12px;
  background: linear-gradient(
    135deg,
    rgba(255, 107, 157, 0.05),
    rgba(77, 208, 225, 0.05)
  );
  border: 1px solid rgba(255, 107, 157, 0.1);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.feature-card::before {
  content: '';
  position: absolute;
  inset-block-start: 0;
  inset-inline-start: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.2),
    transparent
  );
  transition: left 0.5s;
}

.feature-card:hover::before {
  inset-inline-start: 100%;
}

.feature-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(255, 107, 157, 0.2);
  border-color: rgba(255, 107, 157, 0.3);
}

.feature-icon {
  font-size: 3rem;
  margin-inset-block-end: 1rem;
}

.feature-card h3 {
  font-size: 1.5rem;
  font-weight: 700;
  margin-inset-block-end: 1rem;
  color: #1a202c;
}

.feature-card p {
  color: #666;
  line-height: 1.6;
}

/* Pricing Section */
.pricing {
  padding: 6rem 0;
  background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
}

.pricing-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 2rem;
  margin-inset-block-start: 3rem;
}

.pricing-card {
  background: white;
  border-radius: 16px;
  padding: 2rem;
  text-align: center;
  position: relative;
  transition: transform 0.3s ease;
  border: 2px solid transparent;
}

.pricing-card:hover {
  transform: translateY(-5px);
}

.pricing-card.popular {
  border-color: #ff66cc;
  transform: scale(1.05);
}

.pricing-card.limited {
  border-color: #ff8c42;
}

.limited-badge {
  position: absolute;
  inset-block-start: -10px;
  inset-inline-start: 50%;
  transform: translateX(-50%);
  background: linear-gradient(135deg, #ff8c42, #ff66cc);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
}

.popular-badge {
  position: absolute;
  inset-block-start: -10px;
  inset-inline-start: 50%;
  transform: translateX(-50%);
  background: #ff66cc;
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  font-size: 0.8rem;
  font-weight: 600;
}

.plan-name {
  font-size: 1.5rem;
  font-weight: 700;
  margin-inset-block-end: 1rem;
  color: #1a202c;
}

.plan-price {
  margin-inset-block-end: 2rem;
}

.price {
  font-size: 3rem;
  font-weight: 800;
  color: #ff66cc;
}

.period {
  font-size: 1rem;
  color: #666;
}

.plan-features {
  list-style: none;
  margin-inset-block-end: 2rem;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  margin-inset-block-end: 0.75rem;
  color: #666;
}

.check {
  color: #20b2aa;
  font-weight: 600;
}

.plan-button {
  width: 100%;
  padding: 1rem;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
  border: none;
}

/* Download Section */
.download {
  padding: 6rem 0;
  background: white;
}

.download-buttons {
  display: flex;
  justify-content: center;
  gap: 2rem;
  flex-wrap: wrap;
}

.download-btn {
  display: flex;
  align-items: center;
  gap: 1rem;
  padding: 1.5rem 2rem;
  background: white;
  border: 2px solid #e2e8f0;
  border-radius: 12px;
  cursor: pointer;
  transition: all 0.3s ease;
  min-width: 200px;
}

.download-btn:hover {
  border-color: #ff66cc;
  transform: translateY(-3px);
  box-shadow: 0 10px 25px rgba(255, 102, 204, 0.2);
}

.os-icon {
  font-size: 2rem;
}

.os-name {
  display: block;
  font-weight: 600;
  color: #1a202c;
}

.file-size {
  font-size: 0.9rem;
  color: #666;
}

/* Footer */
.footer {
  background: #1a202c;
  color: white;
  padding: 3rem 0 1rem;
}

.footer-content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-inset-block-end: 2rem;
}

.footer-brand {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  font-weight: 700;
  font-size: 1.25rem;
}

.footer-links {
  display: flex;
  gap: 2rem;
}

.footer-links a {
  color: #a0aec0;
  text-decoration: none;
  transition: color 0.3s ease;
}

.footer-links a:hover {
  color: #ff66cc;
}

.footer-bottom {
  text-align: center;
  padding-inset-block-start: 2rem;
  border-inset-block-start: 1px solid #2d3748;
  color: #a0aec0;
}

/* Success Page Styles */
.success-page {
  min-height: 100vh;
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 100%);
  color: #ffffff;
  padding: 60px 0;
}

.success-content {
  max-width: 800px;
  margin: 0 auto;
  text-align: center;
}

.success-icon {
  font-size: 80px;
  margin-inset-block-end: 30px;
  animation: bounce 2s infinite;
}

@keyframes bounce {
  0%,
  20%,
  50%,
  80%,
  100% {
    transform: translateY(0);
  }
  40% {
    transform: translateY(-20px);
  }
  60% {
    transform: translateY(-10px);
  }
}

.success-content h1 {
  font-size: 48px;
  font-weight: 700;
  margin-inset-block-end: 20px;
  background: linear-gradient(135deg, #4facfe 0%, #00d4aa 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}

.success-message {
  font-size: 18px;
  color: #e0e0e0;
  margin-inset-block-end: 40px;
  line-height: 1.6;
}

.download-section {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 20px;
  padding: 40px;
  margin: 40px 0;
  border: 1px solid rgba(255, 255, 255, 0.1);
}

.download-section h2 {
  font-size: 32px;
  margin-inset-block-end: 20px;
  color: #ffffff;
}

.download-section p {
  font-size: 16px;
  color: #888;
  margin-inset-block-end: 30px;
}

.download-buttons {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: wrap;
}

.download-btn {
  display: flex;
  align-items: center;
  gap: 15px;
  padding: 20px 30px;
  background: rgba(255, 255, 255, 0.1);
  border: 2px solid rgba(255, 255, 255, 0.2);
  border-radius: 15px;
  color: #ffffff;
  text-decoration: none;
  transition: all 0.3s ease;
  min-width: 200px;
}

.download-btn:hover {
  background: rgba(79, 172, 254, 0.2);
  border-color: #4facfe;
  transform: translateY(-5px);
  box-shadow: 0 10px 30px rgba(79, 172, 254, 0.3);
}

.download-icon {
  font-size: 32px;
}

.download-info {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
}

.download-title {
  font-size: 18px;
  font-weight: 600;
  color: #ffffff;
}

.download-subtitle {
  font-size: 14px;
  color: #888;
}

.next-steps {
  background: rgba(0, 212, 170, 0.1);
  border: 1px solid rgba(0, 212, 170, 0.3);
  border-radius: 15px;
  padding: 30px;
  margin: 40px 0;
  text-align: start;
}

.next-steps h3 {
  font-size: 24px;
  margin-inset-block-end: 20px;
  color: #00d4aa;
}

.next-steps ul {
  list-style: none;
  padding: 0;
}

.next-steps li {
  padding: 10px 0;
  font-size: 16px;
  color: #e0e0e0;
  border-inset-block-end: 1px solid rgba(255, 255, 255, 0.1);
}

.next-steps li:last-child {
  border-inset-block-end: none;
}

.support-section {
  background: rgba(255, 179, 71, 0.1);
  border: 1px solid rgba(255, 179, 71, 0.3);
  border-radius: 15px;
  padding: 30px;
  margin: 40px 0;
}

.support-section h3 {
  font-size: 24px;
  margin-inset-block-end: 20px;
  color: #ffb347;
}

.support-section p {
  font-size: 16px;
  color: #e0e0e0;
  margin-inset-block-end: 20px;
}

.support-links {
  display: flex;
  gap: 20px;
  justify-content: center;
  flex-wrap: wrap;
}

.support-link {
  color: #4facfe;
  text-decoration: none;
  font-size: 16px;
  padding: 10px 20px;
  background: rgba(79, 172, 254, 0.1);
  border-radius: 10px;
  transition: all 0.3s ease;
}

.support-link:hover {
  background: rgba(79, 172, 254, 0.2);
  transform: translateY(-2px);
}

.action-buttons {
  display: flex;
  gap: 20px;
  justify-content: center;
  margin-inset-block-start: 40px;
}

.loading {
  text-align: center;
  padding: 60px 0;
}

.spinner {
  width: 50px;
  height: 50px;
  border: 5px solid rgba(79, 172, 254, 0.3);
  border-inset-block-start: 5px solid #4facfe;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin: 0 auto 20px;
}

@keyframes spin {
  0% {
    transform: rotate(0deg);
  }
  100% {
    transform: rotate(360deg);
  }
}

/* Responsive Design */
@media (max-width: 768px) {
  .nav-menu {
    display: none;
  }

  .nav-toggle {
    display: block;
  }

  .hero-container {
    grid-template-columns: 1fr;
    text-align: center;
  }

  .hero-title {
    font-size: 2.5rem;
  }

  .hero-buttons {
    justify-content: center;
  }

  .hero-stats {
    justify-content: center;
  }

  .terminal-preview {
    transform: none;
  }

  .pricing-card.popular {
    transform: none;
  }

  .download-buttons {
    flex-direction: column;
    align-items: center;
  }

  .footer-content {
    flex-direction: column;
    gap: 2rem;
    text-align: center;
  }
}

/* Terminal Preview Styling */
.terminal-preview {
  background: #1a1a1a;
  border-radius: 12px;
  box-shadow: 0 20px 40px rgba(0, 0, 0, 0.3);
  overflow: hidden;
  width: 100%;
  max-width: 600px;
  font-family: 'Monaco', 'Menlo', 'Ubuntu Mono', monospace;
}

.terminal-header {
  background: #2d2d2d;
  padding: 12px 16px;
  display: flex;
  align-items: center;
  gap: 8px;
  border-inset-block-end: 1px solid #404040;
}

.terminal-dots {
  display: flex;
  gap: 6px;
}

.dot {
  width: 12px;
  height: 12px;
  border-radius: 50%;
}

.dot.red {
  background: #ff5f56;
}
.dot.yellow {
  background: #ffbd2e;
}
.dot.green {
  background: #27ca3f;
}

.terminal-title {
  color: #fff;
  font-size: 14px;
  font-weight: 500;
}

.terminal-body {
  padding: 20px;
  color: #e0e0e0;
  font-size: 14px;
  line-height: 1.6;
}

.terminal-line {
  margin-inset-block-end: 8px;
  display: flex;
  align-items: flex-start;
  gap: 8px;
}

.prompt {
  color: #4ade80;
  font-weight: bold;
  flex-shrink: 0;
}

.command {
  color: #e0e0e0;
}

.ai-suggestion {
  background: rgba(255, 107, 157, 0.1);
  padding: 8px 12px;
  border-radius: 6px;
  border-inset-inline-start: 3px solid #ff6b9d;
  margin: 8px 0;
}

.ai-icon {
  color: #ff6b9d;
  font-size: 16px;
}

.suggestion {
  color: #ffb3d1;
  font-style: italic;
}

.explanation {
  background: rgba(77, 208, 225, 0.1);
  padding: 8px 12px;
  border-radius: 6px;
  border-inset-inline-start: 3px solid #4dd0e1;
  margin: 8px 0;
}

.explanation-text {
  color: #a7f3d0;
  font-size: 13px;
}

.cursor {
  color: #4ade80;
  animation: blink 1s infinite;
}

@keyframes blink {
  0%,
  50% {
    opacity: 1;
  }
  51%,
  100% {
    opacity: 0;
  }
}

/* Feature Tags */
.feature-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 0.5rem;
  margin-inset-block-start: 1rem;
  justify-content: center;
}

.tag {
  background: linear-gradient(135deg, #ff6b9d, #ff8a80);
  color: white;
  padding: 0.25rem 0.75rem;
  border-radius: 20px;
  font-size: 0.75rem;
  font-weight: 500;
}

/* Badge Styling */
.badge {
  background: rgba(255, 255, 255, 0.2);
  color: white;
  padding: 0.5rem 1rem;
  border-radius: 20px;
  font-size: 0.9rem;
  font-weight: 500;
  backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.3);
}

.hero-badges {
  display: flex;
  flex-wrap: wrap;
  gap: 1rem;
  justify-content: center;
  margin: 2rem 0;
}

/* Feedback Section */
.feedback {
  padding: 5rem 0;
  background: linear-gradient(135deg, #0a0a0a 0%, #1a1a2e 50%, #16213e 100%);
  position: relative;
  overflow: hidden;
}

.feedback::before {
  content: '';
  position: absolute;
  inset-block-start: 0;
  inset-inline-start: 0;
  inset-inline-end: 0;
  inset-block-end: 0;
  background:
    radial-gradient(
      circle at 20% 80%,
      rgba(79, 172, 254, 0.05) 0%,
      transparent 50%
    ),
    radial-gradient(
      circle at 80% 20%,
      rgba(0, 242, 254, 0.05) 0%,
      transparent 50%
    );
  pointer-events: none;
}

.feedback-content {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 4rem;
  align-items: start;
  position: relative;
  z-index: 1;
}

.feedback-info h2 {
  font-size: 2.5rem;
  font-weight: 700;
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  margin-inset-block-end: 1.5rem;
}

.feedback-info p {
  font-size: 1.2rem;
  color: #b0b0b0;
  line-height: 1.6;
  margin-inset-block-end: 2rem;
}

@media (max-width: 768px) {
  .feedback {
    padding: 3rem 0;
  }

  .feedback-content {
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .feedback-info h2 {
    font-size: 2rem;
  }

  .feedback-info p {
    font-size: 1rem;
  }
}

/* Email Section Styles */
.email-section {
  margin-inset-block-start: 3rem;
  padding: 2rem;
  background: white;
  border-radius: 16px;
  text-align: center;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
}

.email-section h3 {
  font-size: 1.8rem;
  font-weight: 700;
  color: #1a202c;
  margin-inset-block-end: 1rem;
}

.email-section p {
  color: #666;
  margin-inset-block-end: 1.5rem;
}

.email-input-group {
  display: flex;
  gap: 1rem;
  max-width: 500px;
  margin: 0 auto 1rem;
}

.email-input {
  flex: 1;
  padding: 1rem;
  border: 2px solid #e2e8f0;
  border-radius: 8px;
  font-size: 1rem;
  transition: border-color 0.3s ease;
}

.email-input:focus {
  outline: none;
  border-color: #ff66cc;
}

.email-button {
  padding: 1rem 2rem;
  background: linear-gradient(135deg, #ff66cc, #ff8c42);
  color: white;
  border: none;
  border-radius: 8px;
  font-weight: 600;
  cursor: pointer;
  transition: all 0.3s ease;
}

.email-button:hover {
  background: linear-gradient(135deg, #ff8c42, #ff66cc);
  transform: translateY(-2px);
}

.email-note {
  margin-inset-block-start: 1rem;
  font-size: 0.9rem;
  color: #666;
  text-align: center;
  background: #f8f9fa;
  padding: 0.75rem;
  border-radius: 8px;
  border-inset-inline-start: 4px solid #ff66cc;
}

@media (max-width: 768px) {
  .email-input-group {
    flex-direction: column;
  }

  .email-button {
    width: 100%;
  }
}
