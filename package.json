{
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "prepare": "husky install",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "lint:ci": "eslint . --max-warnings=0 --cache --cache-location .cache/eslint",
    "lint:staged": "lint-staged",
    "lint:css": "stylelint \"**/*.{css,scss,less}\" --cache --cache-location .cache/stylelint",
    "lint:css:fix": "stylelint \"**/*.{css,scss,less}\" --fix --cache --cache-location .cache/stylelint",
    "format": "prettier -w .",
    "format:check": "prettier --check .",
    "spell": "cspell lint --no-progress --gitignore --cache \"**/*\"",
    "spell:fix": "cspell lint --no-progress --gitignore --cache --fix \"**/*\"",
    "audit": "pnpm audit --prod",
    "sbom": "pnpm dlx syft dir:. -o json > sbom.json",
    "deps:check": "pnpm dlx knip && pnpm dlx syncpack lint",
    "release:version": "changeset version",
    "release:publish": "pnpm -r --filter ./packages/** publish --access restricted",
    "release": "pnpm release:version && pnpm install --lockfile-only && git add pnpm-lock.yaml && git commit -m \"chore: update lockfile\" || true && pnpm release:publish",
    "env:doctor": "tsx tools/env-doctor.ts",
    "env:doctor:local": "ENV_DOCTOR_TARGET=local tsx tools/env-doctor.ts",
    "env:doctor:cf:prod": "ENV_DOCTOR_TARGET=cloudflare:prod tsx tools/env-doctor.ts",
    "env:doctor:gh": "ENV_DOCTOR_TARGET=github:actions tsx tools/env-doctor.ts",
    "fix": "bash scripts/fix-all.sh",
    "fix:dry-run": "bash scripts/fix-all.sh --dry-run",
    "fix:markdown": "bash scripts/fix-all.sh --only-markdown",
    "fix:css": "bash scripts/fix-all.sh --only-css",
    "fix:md": "node scripts/fix-md.mjs",
    "fix:css-logical": "node scripts/fix-css-logical.js",
    "fix:css-physical": "node scripts/fix-css-physical.mjs",
    "fix:md:dry-run": "node scripts/fix-md.mjs --dry-run",
    "fix:css-logical:dry-run": "node scripts/fix-css-logical.js --dry-run",
    "fix:css-physical:dry-run": "node scripts/fix-css-physical.mjs --dry-run",
    "fix:enhanced": "node scripts/fix-all-enhanced.mjs",
    "fix:enhanced:dry-run": "node scripts/fix-all-enhanced.mjs --dry-run",
    "fix:enhanced:verbose": "node scripts/fix-all-enhanced.mjs --verbose",
    "fix:staged": "node scripts/fix-staged.js",
    "fix:staged:quick": "bash scripts/fix-staged.sh",
    "quality:check": "bash scripts/good-state-check.sh",
    "quality:status": "node scripts/quality-status.js",
    "good:state": "pnpm quality:check && pnpm fix:staged && pnpm test",
    "verify:quick": "pnpm fix:enhanced && pnpm -r run typecheck",
    "verify:strict": "pnpm fix:enhanced && pnpm -r run typecheck && pnpm -r test",
    "verify:changed": "node -e \"const cp=require('child_process');const base=cp.execSync('git merge-base origin/main HEAD').toString().trim();const list=cp.execSync(`git diff --name-only ${base}`).toString().split('\\\\n').filter(Boolean);if(!list.length){process.exit(0)}const js=list.filter(f=>/\\\\.(c?m?js|ts|tsx)$/.test(f)).join(' ');if(js) cp.execSync(`pnpm exec eslint --cache --cache-location .cache/eslint ${js}`,{stdio:'inherit'});const md=list.filter(f=>/\\\\.md$/.test(f)).join(' ');if(md) cp.execSync(`pnpm fix:md --paths ${md}`,{stdio:'inherit'});\"",
    "precommit": "pnpm fix:staged",
    "commit:fix": "pnpm fix:staged && git commit --amend --no-edit && git push -f",
    "release:guard": "pnpm fix:enhanced && pnpm -r test && pnpm -r run typecheck",
    "release:dry": "pnpm verify:strict && pnpm prepublish:verify:prod || (echo '‚ùå release checks failed' && exit 1)",
    "prepublishOnly": "pnpm release:guard",
    "prepublish:verify:prod": "bash scripts/ops/prepublish-verify.sh",
    "ops:cache:cleanup": "bash scripts/ops/cache-cleanup.sh",
    "ops:hook:health": "bash scripts/ops/hook-health.sh",
    "ops:release:guard": "bash scripts/ops/release-guard.sh",
    "ops:format:freeze": "bash scripts/ops/format-freeze.sh",
    "ship:linux": "REQUIRED_PLATFORMS=linux pnpm -w --filter ./apps/terminal-pro/desktop build:linux && pnpm -w --filter ./apps/terminal-pro/desktop feeds:gen && pnpm -w --filter ./apps/terminal-pro/desktop r2:sync && pnpm -w --filter ./apps/terminal-pro/desktop worker:deploy && pnpm -w --filter ./apps/website pages:deploy && pnpm -w --filter ./apps/terminal-pro/desktop cache:purge && pnpm -w --filter ./apps/terminal-pro/desktop prepublish:verify:prod",
    "changelog:gen": "pnpm dlx conventional-changelog -p angular -i CHANGELOG.md -s"
  },
  "pnpm": {
    "overrides": {
      "electron": "20.3.12",
      "electron-rebuild": "3.2.9",
      "electron-builder": "26.0.12",
      "electron-builder-squirrel-windows": "26.0.12",
      "app-builder-lib": "26.0.12",
      "dmg-builder": "26.0.12",
      "node-pty": "1.0.0",
      "eslint-plugin-react-hooks": "^5",
      "eslint": "9.39.2",
      "prettier": "3.7.4",
      "stylelint": "16.0.0",
      "cspell": "9.4.0",
      "typescript": "5.9.3"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,cjs,mjs,json}": [
      "eslint --fix --max-warnings=0",
      "prettier --write"
    ],
    "*.{md,yml,yaml,css,scss}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "electron-store": "^11.0.2",
    "express": "^5.2.1",
    "node-fetch": "^3.3.2",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251213.0",
    "@cspell/cspell-bundled-dicts": "^9.4.0",
    "@eslint/js": "^9.39.2",
    "@types/node": "^25.0.2",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "body-parser": "^2.2.1",
    "conventional-changelog": "^5.1.0",
    "cspell": "^9.4.0",
    "electron-builder": "^26.0.12",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-security": "^3.0.1",
    "glob": "^11.0.0",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "markdownlint": "^0.34.0",
    "markdownlint-cli": "^0.41.0",
    "pino": "^10.1.0",
    "prettier": "^3.7.4",
    "stripe": "^20.0.0",
    "stylelint": "^16.0.0",
    "stylelint-config-recommended": "^14.0.0",
    "stylelint-config-standard": "^36.0.0",
    "stylelint-order": "^6.0.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0",
    "vitest": "^4.0.15",
    "yaml": "^2.8.2"
  }
}
