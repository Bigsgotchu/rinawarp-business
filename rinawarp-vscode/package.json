{
  "name": "rinawarp-brain-client",
  "displayName": "RinaWarp Brain",
  "description": "VS Code client that delegates planning, validation, and execution to RinaWarp Terminal Pro",
  "version": "0.1.0",
  "publisher": "rinawarp",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": ["Other"],
  "activationEvents": [
    "onCommand:rinawarp.status",
    "onCommand:rinawarp.explain",
    "onCommand:rinawarp.plan",
    "onCommand:rinawarp.execute",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rinawarp.status",
        "title": "RinaWarp: Status"
      },
      {
        "command": "rinawarp.explain",
        "title": "RinaWarp: Explain Selection"
      },
      {
        "command": "rinawarp.plan",
        "title": "RinaWarp: Plan Action"
      },
      {
        "command": "rinawarp.execute",
        "title": "RinaWarp: Execute Plan"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "rinawarp",
          "title": "RinaWarp",
          "icon": "media/rinawarp.svg"
        }
      ]
    },
    "views": {
      "rinawarp": [
        {
          "id": "rinawarpMain",
          "name": "RinaWarp",
          "when": "true"
        }
      ]
    }
  },
  "scripts": {
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.3.0",
    "@vscode/vsce": "^2.22.0"
  },
  "dependencies": {}
}