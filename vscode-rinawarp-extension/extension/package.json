{
  "name": "rinawarp-brain",
  "displayName": "RinaWarp Brain",
  "description": "Treat RinaWarp as the authority: plan/preview/approve/execute from VS Code.",
  "version": "0.1.0",
  "publisher": "rinawarp",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:rinawarp.openPanel",
    "onCommand:rinawarp.plan",
    "onCommand:rinawarp.preview",
    "onCommand:rinawarp.approve",
    "onCommand:rinawarp.execute",
    "onCommand:rinawarp.verify",
    "onCommand:rinawarp.ping",
    "onCommand:rinawarp.exportSessionBundle",
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "rinawarp.openPanel",
        "title": "RinaWarp: Open Panel"
      },
      {
        "command": "rinawarp.plan",
        "title": "RinaWarp: Plan"
      },
      {
        "command": "rinawarp.preview",
        "title": "RinaWarp: Preview"
      },
      {
        "command": "rinawarp.approve",
        "title": "RinaWarp: Approve"
      },
      {
        "command": "rinawarp.execute",
        "title": "RinaWarp: Execute"
      },
      {
        "command": "rinawarp.verify",
        "title": "RinaWarp: Verify"
      },
      {
        "command": "rinawarp.ping",
        "title": "RinaWarp: Ping Daemon"
      },
      {
        "command": "rinawarp.exportSessionBundle",
        "title": "RinaWarp: Export Session Bundle"
      }
    ],
    "configuration": {
      "title": "RinaWarp",
      "properties": {
        "rinawarp.baseUrl": {
          "type": "string",
          "default": "http://127.0.0.1:8787",
          "description": "Base URL for the local RinaWarp daemon."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -watch -p .",
    "package": "vsce package",
    "check:types": "node -p \"require.resolve('@types/vscode/package.json')\" && tsc -p . --noEmit"
  },
  "devDependencies": {
    "@types/node": "^20.19.29",
    "@types/vscode": "^1.85.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@types/node-fetch": "^2.6.13",
    "node-fetch": "^3.3.2",
    "zod": "^3.23.8"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Bigsgotchu/rinawarp-business.git"
  }
}
